<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#CBE7CC"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="35dp"
        android:text="EMERGENCY PROCEDURES"
        android:textColor="#00841D"
        android:layout_marginStart="30dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Scrollable Button List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Button for Fire Emergency -->
            <Button
                android:id="@+id/fire"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="FIRE EMERGENCY"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Earthquake Emergency -->
            <Button
                android:id="@+id/earthquake"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="EARTHQUAKE"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Bullying/Violence -->
            <Button
                android:id="@+id/bullying"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="VIOLENCE OR BULLYING"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Bomb Threat -->
            <Button
                android:id="@+id/bomb_threat"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="BOMB THREAT"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Health Emergencies -->
            <Button
                android:id="@+id/health_emer"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="HEALTH EMERGENCIES"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <!-- TextView to Display Emergency Procedures -->
    <TextView
        android:id="@+id/emer_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:visibility="gone" />

    <!-- Bottom Navigation Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00370C"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Campus Map Button -->
        <ImageButton
            android:id="@+id/iv_campus_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/campus_map_desc"
            android:src="@drawable/campus_icon" />

        <!-- Emergency Info Button -->
        <ImageButton
            android:id="@+id/iv_emergency"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/emergency_desc"
            android:src="@drawable/emergency_icon" />

        <!-- Saved Locations Button -->
        <ImageButton
            android:id="@+id/iv_saved"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/saved_desc"
            android:src="@drawable/saved_icon" />

        <!-- Profile Button -->
        <ImageButton
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/profile_icon"
            android:contentDescription="@string/profile_desc" />
    </LinearLayout>

</LinearLayout>

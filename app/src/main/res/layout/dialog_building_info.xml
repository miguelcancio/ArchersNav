<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="16dp"
    android:clipToOutline="true">

    <!-- Building Name -->
    <TextView
        android:id="@+id/tvBuildingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Building Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="8dp" />

    <!-- Scrollable Container for Building Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Building Details Text -->
        <TextView
            android:id="@+id/tvBuildingDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Building details go here."
            android:textColor="@color/material_dynamic_neutral70"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />
    </ScrollView>
</LinearLayout>

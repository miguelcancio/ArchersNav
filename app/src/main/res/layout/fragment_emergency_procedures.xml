<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#CBE7CC"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="35dp"
        android:text="EMERGENCY PROCEDURES"
        android:textColor="#00841D"
        android:layout_marginStart="30dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Scrollable Button List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Button for Fire Emergency -->
            <Button
                android:id="@+id/fire"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="FIRE EMERGENCY"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Earthquake Emergency -->
            <Button
                android:id="@+id/earthquake"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="EARTHQUAKE"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Bullying/Violence -->
            <Button
                android:id="@+id/bullying"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="VIOLENCE OR BULLYING"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Bomb Threat -->
            <Button
                android:id="@+id/bomb_threat"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="BOMB THREAT"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Button for Health Emergencies -->
            <Button
                android:id="@+id/health_emer"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="HEALTH EMERGENCIES"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <!-- TextView to Display Emergency Procedures -->
    <TextView
        android:id="@+id/emer_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:visibility="gone" />

</LinearLayout>

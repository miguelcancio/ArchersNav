<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBE7CC"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.activity.introduction.ui.signup.SignUpActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/archer_logo" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:text="Register"
        android:textColor="#00841D"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:textColor="#00841D"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/et_full_name"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:hint="Full Name"
        android:padding="10dp"
        android:fontFamily="@font/inter_variable"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="#969696"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/person_icon"/>

    <EditText
        android:id="@+id/id_number"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:hint="ID Number"
        android:padding="10dp"
        android:fontFamily="@font/inter_variable"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="#969696"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/person_icon"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:hint="DLSU Email"
        android:padding="10dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/inter_variable"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="#969696"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/email_icon"/>

    <Spinner
        android:id="@+id/spinner_role"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/password"
        android:layout_width="271dp"
        android:drawablePadding="8dp"
        android:layout_height="42dp"
        android:hint="Password"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="#969696"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:drawableStart="@drawable/password_icon"/>

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:drawablePadding="8dp"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_variable"
        android:textSize="16sp"
        android:background="@drawable/edit_text_background"
        android:textColorHint="#969696"
        android:inputType="textPassword"
        android:drawableStart="@drawable/password_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTE: "
            android:textColor="#00841D"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_password_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password must be at least 6 characters long."
            android:textColor="#00841D"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00841D"
        android:text="Register"
        android:textSize="20sp"
        android:minHeight="48dp"
        android:fontFamily="@font/inter_variable"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textSize="14sp"
            android:textColor="#00841D" />

        <TextView
            android:id="@+id/tv_sign_in_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="14sp"
            android:textColor="#00841D"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="onSignInClick"
            android:padding="4dp" />
    </LinearLayout>

</LinearLayout>
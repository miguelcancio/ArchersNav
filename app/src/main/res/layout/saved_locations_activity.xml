<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBE7CC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="35dp"
            android:text="SAVED LOCATIONS"
            android:textColor="#00841D"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- First Location Button with Star -->
        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="67dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_location1"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"

                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="Br. Andrew"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_star_location1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Star Button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_star_outline" />
        </LinearLayout>

        <!-- Second Location Button with Star -->
        <LinearLayout
            android:layout_width="307dp"
            android:layout_height="124dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_location2"
                android:layout_width="293dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#7AA683"
                android:fontFamily="@font/inter_variable"
                android:text="Bloemen"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_star_location2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:background="@android:color/transparent"
                android:contentDescription="Star Button"
                android:layout_marginBottom="35dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_star_outline" />
        </LinearLayout>

    </LinearLayout>

    <!-- Activity History Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp">

        <!-- Activity History Image -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Activity History Icon"
            android:src="@drawable/history" />

        <!-- Activity History Button -->
        <Button
            android:id="@+id/btn_activity_history"
            android:layout_width="160dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:backgroundTint="#2e7841"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter_variable"
            android:text="Activity History"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center_vertical|start" />
    </LinearLayout>


    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00370C"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/iv_campus_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/campus_map_desc"
            android:src="@drawable/campus_icon" />

        <ImageButton
            android:id="@+id/iv_emergency"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/emergency_desc"
            android:src="@drawable/emergency_icon" />

        <ImageButton
            android:id="@+id/iv_saved"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/saved_desc"
            android:src="@drawable/saved_icon" />

        <ImageButton
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/profile_icon"
            android:contentDescription="@string/profile_desc" />
    </LinearLayout>

</RelativeLayout>

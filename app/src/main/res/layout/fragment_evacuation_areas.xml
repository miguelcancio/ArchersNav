<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CBE7CC"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="35dp"
        android:text="EVACUATION AREAS"
        android:textColor="#00841D"
        android:layout_marginStart="30dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Image of the Evacuation Plan -->
    <ImageView
        android:id="@+id/evacuation_plan_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/taft_campus_evacuation_plan"
        android:contentDescription="@string/evacuation_plan_desc" />

    <!-- ScrollView to hold other content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"/>

    </ScrollView>
</LinearLayout>

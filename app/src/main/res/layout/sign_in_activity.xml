<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#CBE7CC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="0dp">

        <ImageView
            android:id="@+id/topImage"
            android:layout_width="434dp"
            android:layout_height="220dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/top_image_desc"
            android:scaleType="fitXY"
            android:src="@drawable/dlsu" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/logo_desc"
            android:src="@drawable/archer_logo" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="271dp"
            android:layout_height="42dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/email_icon"
            android:hint="Email"
            android:padding="10dp"
            android:drawablePadding="8dp"
            android:textColorHint="#969696"
            android:textSize="16sp"
            android:focusable="true"
            android:inputType="textEmailAddress"
            android:focusableInTouchMode="true" />


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="271dp"
            android:layout_height="42dp"
            android:background="@drawable/edit_text_background"
            android:drawableLeft="@drawable/password_icon"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#969696"
            android:drawablePadding="8dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/rememberMeCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#00841D"
                android:text="Remember me"
                android:layout_marginTop="-5dp"
                android:textColor="#00841D"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginStart="16dp"
                android:text="Forgot Password?"
                android:textColor="#00841D"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="20sp"
            android:backgroundTint="#00841D"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_variable"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/noAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="14sp"
                android:textColor="#00841D"/>

            <TextView
                android:id="@+id/signUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign up"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#00841D"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
